<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks">

    <!-- ADD BUTTON -->
    <Style x:Key="AddButton"
           TargetType="Button">
        <Setter Property="Cursor"
                Value="Hand" />
        <Setter Property="Width"
                Value="60" />
        <Setter Property="Height"
                Value="60" />
        <Setter Property="Background"
                Value="#3f4a3a" />
        <Setter Property="Foreground"
                Value="#72bf50" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderThickness="0"
                            CornerRadius="10">
                        <Icon:PackIconMaterialDesign Kind="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                                     Width="30"
                                                     Height="30"
                                                     Foreground="{TemplateBinding Foreground}"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Margin="10" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Background"
                        Value="#4f5c46" />
                <Setter Property="Foreground"
                        Value="#84d25f" />
            </Trigger>
            <Trigger Property="IsPressed"
                     Value="True">
                <Setter Property="Background"
                        Value="#5f6e52" />
                <Setter Property="Foreground"
                        Value="#95e371" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- DELETE BUTTON -->
    <Style x:Key="DeleteButton"
           TargetType="Button">
        <Setter Property="Cursor"
                Value="Hand" />
        <Setter Property="Width"
                Value="60" />
        <Setter Property="Height"
                Value="60" />
        <Setter Property="Background"
                Value="#4a3a3a" />
        <Setter Property="Foreground"
                Value="#bf5050" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderThickness="0"
                            CornerRadius="10">
                        <Icon:PackIconMaterialDesign Kind="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                                     Width="30"
                                                     Height="30"
                                                     Foreground="{TemplateBinding Foreground}"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Margin="10" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Background"
                        Value="#5c4646" />
                <Setter Property="Foreground"
                        Value="#d16060" />
            </Trigger>
            <Trigger Property="IsPressed"
                     Value="True">
                <Setter Property="Background"
                        Value="#6e5252" />
                <Setter Property="Foreground"
                        Value="#e37171" />
            </Trigger>
            <Trigger Property="IsEnabled"
                     Value="False">
                <Setter Property="Background"
                        Value="#a5a3a3" />
                <Setter Property="Foreground"
                        Value="#c8c5c5" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- EDIT BUTTON -->
    <Style x:Key="EditButton"
           TargetType="Button">
        <Setter Property="Cursor"
                Value="Hand" />
        <Setter Property="Width"
                Value="60" />
        <Setter Property="Height"
                Value="60" />
        <Setter Property="Background"
                Value="#3a3f4a" />
        <Setter Property="Foreground"
                Value="#5072bf" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderThickness="0"
                            CornerRadius="10">
                        <Icon:PackIconMaterialDesign Kind="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                                     Width="30"
                                                     Height="30"
                                                     Foreground="{TemplateBinding Foreground}"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Margin="10" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Background"
                        Value="#475061" />
                <Setter Property="Foreground"
                        Value="#6082cf" />
            </Trigger>
            <Trigger Property="IsPressed"
                     Value="True">
                <Setter Property="Background"
                        Value="#55607a" />
                <Setter Property="Foreground"
                        Value="#7093df" />
            </Trigger>
            <Trigger Property="IsEnabled"
                     Value="False">
                <Setter Property="Background"
                        Value="#a3a3a6" />
                <Setter Property="Foreground"
                        Value="#c5c5c8" />
            </Trigger>
        </Style.Triggers>
    </Style>


</ResourceDictionary>