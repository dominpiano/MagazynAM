<Window x:Class="MagazynekAM.ConfirmDeleteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MagazynekAM"
        xmlns:Icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:viewModel="clr-namespace:MagazynekAM.MVVM.ViewModel"
        xmlns:View="clr-namespace:MagazynekAM.MVVM.View"
        Title="Na pewno?"
        Width="400"
        Height="200"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Window.DataContext>
        <viewModel:ConfirmDeleteViewModel />
    </Window.DataContext>
    <Window.Resources>
        <FontFamily x:Key="Roboto Slab">/Fonts/#Roboto Slab</FontFamily>
        <!-- Every label style -->
        <Style TargetType="Label">
            <Setter Property="FontSize"
                    Value="36" />
            <Setter Property="FontFamily"
                    Value="{StaticResource Roboto Slab}" />
            <Setter Property="FontWeight"
                    Value="Light" />
            <Setter Property="HorizontalAlignment"
                    Value="Center" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="Foreground"
                    Value="#afafaf" />
        </Style>
    </Window.Resources>

    <Border Background="#393939"
            CornerRadius="10"
            Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="Czy na pewno chcesz &#10; usunąć przedmiot?"
                       Foreground="#cfcfcf"
                       FontSize="24"
                       FontWeight="Light"
                       FontFamily="/Fonts/#Roboto Slab"
                       TextAlignment="Center"
                       VerticalAlignment="Center" />

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                <Button Content="Tak"
                        Width="100"
                        Margin="10,0"
                        IsDefault="True"
                        Style="{StaticResource InputOKButton}"
                        Command="{Binding ConfirmCommand}" />
                <Button Content="Jednak nie"
                        Width="140"
                        Margin="10,0"
                        IsCancel="True"
                        Style="{StaticResource InputAnulujButton}"
                        Command="{Binding CancelCommand}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
